{
    "compilerOptions": {
      "target": "ESNext",
      "useDefineForClassFields": true,
      "lib": ["DOM", "DOM.Iterable", "ESNext"],
      "allowJs": false,
      "skipLibCheck": true,
      "esModuleInterop": false,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "ESNext",
      "moduleResolution": "Node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "jsx": "react-jsx",
      "baseUrl": "src",
      "paths": {
      "@components/*": ["components/*"],
      "@pages/*": ["pages/*"],
      "@utils/*": ["utils/*"],
      "@models/*": ["models/*"],
      "@layouts/*": ["layouts/*"],
      "@features/*": ["features/*"],
      "@api/*": ["api/*"]
    },
    },
    "exclude": ["**/*.mjs"],
    "include": ["vite.config.ts", ".eslintrc.cjs", "**/*.ts", "**/*.tsx", "styled-components.d.ts"],
    "references": [{ "path": "./tsconfig.node.json" }],
    
  }
  